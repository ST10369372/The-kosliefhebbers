        <item name="colorPrimaryVariant">#B9E19D</item> <!-- Light lime -->
        <item name="colorSecondary">#A3D977</item>
        <item name="android:buttonStyle">@style/RoundedButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
